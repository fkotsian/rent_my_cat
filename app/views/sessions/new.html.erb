<h1>Sign in, My Friend</h1>
<form action="/sessions" method="POST">
	<input type="hidden"
				 name="authenticity_token"
				 value="<%= form_authenticity_token %>" >
	<label for="session_username" >
	<input type="text" name="session[username]" value="<%= session[:username] %>" >

	<label for="session_password" >
	<input type="password" name="session[password]">

	<input type="submit" value="Sign in!">
</form>

<%= link_to "Need to register?", new_user_url %>